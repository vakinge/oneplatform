<?xml version="1.0" encoding="UTF-8"?>
<configuration status="INFO" monitorInterval="1800" shutdownHook="disable">
	<appenders>
		<Console name="Console" target="SYSTEM_OUT" follow="true">
			<PatternLayout
				pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} %level [%thread][%file:%line] - %msg%n" />
		</Console>
	</appenders>

	<loggers>
	    <logger name="org.springframework.web.context.support.StandardServletEnvironment" level="info"></logger>
		<logger name="com.jeesuite" level="debug"></logger>
		<logger name="com.oneplatform" level="debug"></logger>
		<logger name="org.apache.kafka" level="warn"></logger>
		<logger name="com.netflix" level="warn"></logger>
		<root level="info">
			<appender-ref ref="Console" />
		</root>
	</loggers>

</configuration>